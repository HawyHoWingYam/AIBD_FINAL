<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to "Destroy", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Posts</h2>
<%= render @article.posts %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<h2>Add a posts:</h2>
<%= render 'posts/form' %>


